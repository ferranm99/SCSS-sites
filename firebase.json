{
  "hosting": {
    "public": "_site",
    "rules": "firebase_config/firebase_rules.json",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source" : "/widgets/",
        "destination" : "/basic-widgets/",
        "type" : 301
      },
      {
        "source" : "/tutorial/",
        "destination" : "/widgets-intro/",
        "type" : 301
      }
    ]
  }
}
